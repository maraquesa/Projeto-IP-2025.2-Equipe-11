import pygame
from sys import exit
from sprites import *

#criar a tela
tela = pygame.display.set_mode((1500, 750))

clock = pygame.time.Clock()
#tela de fundo
background = pygame.Surface((1500, 750)) #mudar
background.fill('Blue')


perssonagem = Perssonagem(2, (200,200), True, 'Green')
perssonagem_2 = Perssonagem(2,(400,400), False, 'Yellow')



#inicio loop
while True :


    #eventos
    for evento in pygame.event.get() :

        #finalizar progama
        if evento.type == pygame.QUIT :
            pygame.quit()
            exit()


    pygame.display.update()
    tela.blit(background,(0,0))
    perssonagem.atualizar(tela)
    perssonagem_2.atualizar(tela)
    clock.tick(60)
