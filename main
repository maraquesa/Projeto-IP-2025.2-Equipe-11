import pygame
from sys import exit

#criar a tela
tela = pygame.display.set_mode((1500, 750))

clock = pygame.time.Clock()


#inicio loop
while True :


    #eventos
    for evento in pygame.event.get() :

        #finalizar progama
        if evento.type == pygame.QUIT :
            pygame.quit()
            exit()



    pygame.display.update()
    clock.tick(60)
